{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - GymPec{% endblock %}

{% block content %}
    <h1 class="text-center">Modifier mon mot de passe</h1>
    <div class="text-center">
      <a href="{{ path('app_account') }}">Retourner sur mon compte</a>
    </div>
    <hr>
    {% if notif %}
        <div class="alert alert-info">
        {{ notif }}
        </div>
    {% endif %}

    {% if fail %}
        <div class="alert alert-danger">
        {{ fail }}
        </div>
    {% endif %}

    {{ form(form) }}
    <hr>
{% endblock %}


