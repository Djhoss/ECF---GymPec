{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} {% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-5">
           <img src="../uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
          <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            {{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬
            <hr>
            <p>{{ product.description }}</p>
            <hr>
            <a class="btn btn-primary" href="{{ path('app_product')}}">Revenir a nos produits</a>
        </div>
    </div>
</div>

        




{% endblock %}
